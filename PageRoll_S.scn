--track0:角度,-720,720,-90,0.01
--track1:太さ,2,150,20,0.01
--dialog:視点,_1={0,0};視野角,_2=70;陰影,_3=50;裏地(0~2),_4=0;裏地画像,_5=[[]];裏地向き(0~3),_6=0;PI,_0=nil;
local obj, math, tonumber, type = obj, math, tonumber, type;

-- take parameters.
local angle, width, view, fov, shadow, backface, file_image, back_orient, phase = obj.track0, obj.track1, _1, _2, _3, _4, _5, _6, obj.getvalue("scenechange");
_1 = nil; _2 = nil; _3 = nil; _4 = nil; _5 = nil; _6 = nil;
if type(_0) == "table" then
	local t0, t1, ph = _0[1], _0[2], _0.phase; _0 = nil;
	angle = tonumber(t0) or angle;
	width = tonumber(t1) or width;
	phase = tonumber(ph) or phase;
end
local X, Y if type(view) == "table" then X, Y = view[1], view[2] end
X = tonumber(X) or 0;
Y = tonumber(Y) or 0;
fov = tonumber(fov) or 70;
shadow = tonumber(shadow) or 50;
backface = math.floor(0.5 + (tonumber(backface) or 0));
file_image = type(file_image) == "string" and file_image or nil;
back_orient = math.floor(0.5 + (tonumber(back_orient) or 0));

-- apply effect.
require"PageRoll_S".scene_change(math.pi / 180 * angle, width / 100, X, Y, math.pi / 180 * fov, shadow / 100, backface, file_image, back_orient, phase);
